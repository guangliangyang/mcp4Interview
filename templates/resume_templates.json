  "generic": {
    "title": "Generic Professional Resume Template",
    "description": "Adaptable template for various professional positions",
    "sections": {
      "header": {
        "template": "{name}\n{title}\n{location} • {phone} • {email}\n{linkedin}",
        "variables": ["name", "title", "location", "phone", "email", "linkedin"]
      },
      "professional_summary": {
        "template": "{title} with {years}+ years of experience in {industry}. Proven track record in {key_skills} and {achievements}. Seeking to leverage expertise in {target_area} to contribute to {company_goal}.",
        "variables": ["title", "years", "industry", "key_skills", "achievements", "target_area", "company_goal"],
        "max_length": 150
      },
      "core_competencies": {
        "template": "• {skill1}  • {skill2}  • {skill3}\n• {skill4}  • {skill5}  • {skill6}",
        "variables": ["skill1", "skill2", "skill3", "skill4", "skill5", "skill6"]
      },
      "experience": {
        "template": "{title} | {company} | {location} | {duration}\n• {accomplishment1}\n• {accomplishment2}\n• {accomplishment3}\n• {key_technologies}",
        "variables": ["title", "company", "location", "duration", "accomplishment1", "accomplishment2", "accomplishment3", "key_technologies"]
      }
    },
    "ats_optimization": {
      "keywords": [],
      "formatting": {
        "use_standard_headings": true,
        "avoid_graphics": true,
        "use_common_fonts": ["Arial", "Calibri", "Times New Roman"],
        "bullet_points": "•"
      }
    }
  },
  "customization_rules": {
    "industry_adaptations": {
      "technology": {
        "emphasis": ["technical skills", "projects", "certifications"],
        "keywords": ["agile", "scrum", "DevOps", "cloud", "API", "microservices"],
        "format": "technical_focus"
      },
      "finance": {
        "emphasis": ["quantitative achievements", "compliance", "risk management"],
        "keywords": ["financial analysis", "risk assessment", "compliance", "audit"],
        "format": "traditional"
      },
      "healthcare": {
        "emphasis": ["patient care", "regulations", "safety"],
        "keywords": ["patient safety", "HIPAA", "clinical", "healthcare technology"],
        "format": "conservative"
      }
    },
    "experience_level_adaptations": {
      "entry_level": {
        "focus": ["education", "projects", "internships", "relevant coursework"],
        "summary_length": 100,
        "experience_format": "project_heavy"
      },
      "mid_level": {
        "focus": ["achievements", "growth", "leadership", "technical skills"],
        "summary_length": 150,
        "experience_format": "achievement_focused"
      },
      "senior_level": {
        "focus": ["leadership", "strategy", "team building", "business impact"],
        "summary_length": 200,
        "experience_format": "leadership_focused"
      }
    },
    "platform_optimizations": {
      "linkedin": {
        "max_summary_length": 2000,
        "keyword_density": "medium",
        "emphasis": "networking and thought leadership"
      },
      "seek": {
        "max_summary_length": 4000,
        "keyword_density": "high",
        "emphasis": "local market relevance"
      },
      "ats_systems": {
        "format": "simple_text",
        "keyword_density": "high",
        "avoid": ["tables", "columns", "graphics", "special_characters"]
      }
    }
  },
  "validation_rules": {
    "required_sections": ["header", "professional_summary", "experience"],
    "optional_sections": ["education", "skills", "projects", "certifications"],
    "max_length": 2,
    "min_experience_entries": 2,
    "max_experience_entries": 5,
    "date_format": "MM/YYYY",
    "phone_format_validation": true,
    "email_format_validation": true
  }
}