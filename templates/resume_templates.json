{
  "software_engineer": {
    "title": "Software Engineer Resume Template",
    "description": "Optimized for software development, backend, full-stack positions",
    "sections": {
      "header": {
        "template": "{name}\n{title}\n{location} • {phone} • {email}\n{linkedin} • {github}",
        "variables": ["name", "title", "location", "phone", "email", "linkedin", "github"]
      },
      "professional_summary": {
        "template": "Experienced Software Engineer with {years}+ years in {specialization}. Proven expertise in {primary_technologies} and {secondary_skills}. Successfully delivered {achievement_example} and contributed to {impact_metric}.",
        "variables": ["years", "specialization", "primary_technologies", "secondary_skills", "achievement_example", "impact_metric"],
        "max_length": 150
      },
      "technical_skills": {
        "categories": {
          "programming_languages": "Programming Languages: {languages}",
          "frameworks": "Frameworks & Libraries: {frameworks}",
          "databases": "Databases: {databases}",
          "tools": "Tools & Technologies: {tools}",
          "cloud": "Cloud & DevOps: {cloud_tools}"
        },
        "common_skills": {
          "languages": ["Python", "JavaScript", "Java", "TypeScript", "Go", "C++"],
          "frameworks": ["React", "Node.js", "Django", "Flask", "Spring", "Express.js"],
          "databases": ["PostgreSQL", "MongoDB", "MySQL", "Redis", "DynamoDB"],
          "tools": ["Git", "Docker", "Kubernetes", "Jenkins", "VS Code", "IntelliJ"],
          "cloud": ["AWS", "Azure", "GCP", "Terraform", "Ansible", "CI/CD"]
        }
      },
      "experience": {
        "template": "{title} | {company} | {location} | {duration}\n• {achievement1}\n• {achievement2}\n• {achievement3}\n• {technologies_used}",
        "achievement_formulas": [
          "Developed {feature} using {technology}, resulting in {metric}",
          "Optimized {system} performance, reducing {metric} by {percentage}",
          "Led team of {number} developers to deliver {project} {timeline}",
          "Implemented {solution} that improved {process} by {improvement}"
        ],
        "variables": ["title", "company", "location", "duration", "achievement1", "achievement2", "achievement3", "technologies_used"]
      },
      "education": {
        "template": "{degree} in {field}\n{university} | {location} | {year}\n{additional_info}",
        "variables": ["degree", "field", "university", "location", "year", "additional_info"]
      },
      "projects": {
        "template": "{project_name} | {technologies}\n{description}\n• {outcome1}\n• {outcome2}",
        "variables": ["project_name", "technologies", "description", "outcome1", "outcome2"]
      }
    },
    "ats_optimization": {
      "keywords": [
        "software development", "full-stack", "backend", "frontend", "microservices",
        "API development", "database design", "cloud computing", "DevOps", "agile"
      ],
      "formatting": {
        "use_standard_headings": true,
        "avoid_graphics": true,
        "use_common_fonts": ["Arial", "Calibri", "Times New Roman"],
        "bullet_points": "•",
        "date_format": "MM/YYYY"
      }
    }
  },
